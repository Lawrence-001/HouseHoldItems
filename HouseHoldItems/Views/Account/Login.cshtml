@model HouseItems.ViewModels.LoginViewModel
@{
    ViewBag.Title = "Login";
}
<h5 class="text-center">User Login</h5>
<div class="row">
    
    <div class="container-fluid col-xs-7 col-sm-8 col-md-6 col-lg-5">
        <div class="text-danger" asp-validation-summary="All"> </div>
        <form method="post">
            <div class="form-group">
                <label asp-for=" Email"></label>
                <input asp-for="Email" class="form-control" placeholder="example@example.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
           
            <div>
                <button class="btn btn-outline-success">Login</button>
            </div>
            <div>
                <p>Not yet registered?
                <a asp-action="register" asp-controller="account">Register here</a></p>
            </div>
        </form>
    </div>
</div>