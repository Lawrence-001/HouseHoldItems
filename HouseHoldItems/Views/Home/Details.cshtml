@model HouseHoldItems.Models.Products

@{
    ViewBag.Title = "Product Details";
}
<div class="row">
    <div class="container-fluid col-md-6">
        <div class="card">

            <div class="card" style="min-width:200px; max-width:540px">
                <div class="card-header text-center">
                    @Model.Name
                </div><div class="card-body text-center">
                    <img src="~/images/audi.jpg" style="width:25px height:15px" class="card-img-top" alt="@Model.Name" />

                    <h5>Description: @Model.Description </h5>
                    <h5>Cost: @Model.Cost </h5>
                </div>
                <div class="card-footer text-center">
                    <a asp-controller="home" asp-action="index" class="btn btn-outline-primary">Back</a>
                    <a asp-controller="home" asp-action="edit" asp-route-Id="@Model.ProductId" class="btn btn-outline-success">Update</a>
                    <a asp-controller="home" asp-action="delete" asp-route-Id="@Model.ProductId" class="btn btn-outline-danger">Delete</a>

                </div>
            </div>
        </div>
    </div>




</div>