@model ProductCreateViewModel

@{
    ViewBag.Title = "Adding a new Product";
}
<h5 class="text-center">Add a new product</h5>
<div class="row">
    <div class="container-fluid col-md-6 col-sm-7">
        <form class="form-group" method="post" asp-controller="home" asp-action="create">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea class="form-control" asp-for="Description">
                </textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductCategory"></label>
                <select asp-for="ProductCategory" class="form-control" asp-items="@Html.GetEnumSelectList<ProductCategory>()">
                    </>
                    <option value="">Select a category</option>
                </select>
                <span asp-validation-for="ProductCategory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cost"></label>
                <input asp-for="Cost" class="form-control" />
                <span asp-validation-for="Cost" class="text-danger"></span>
            </div>
            <div>
                @*<input asp-controller="home" asp-action="create" type="submit" value="Add Product" class=" btn btn-outline-primary" />*@
                <button class="btn btn-outline-primary">Add Product</button>
                <a asp-controller="home" asp-action="index" class="btn btn-outline-primary float-right">Show All</a>
            </div>
        </form>
    </div>

</div>
